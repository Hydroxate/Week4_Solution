<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.csis.lab04.MainActivity">


    <TextView
        android:text="FREQUENCY VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/counter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/frequency" />

    <Switch
        android:text="Counter On/Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/onOffSwitch1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COUNTER VALUE"
        android:id="@+id/counter"
        android:layout_below="@+id/onOffSwitch1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frequency"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/volume1"
        android:max="100" />

    <Switch
        android:text="PlaySound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/volume1"
        android:layout_alignStart="@+id/counter"
        android:layout_marginTop="81dp"
        android:id="@+id/onOffSwitch2" />

    <TextView
        android:text="Volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frequency"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onOffSwitch2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/volume2"
        android:max="100" />

    <TextView
        android:text="Volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/onOffSwitch2"
        android:layout_alignParentStart="true" />

</RelativeLayout>
